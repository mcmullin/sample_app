<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
      <%= render 'shared/user_info' %>
      <%= render 'shared/stats' %>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>
        <%= pluralize(@user.microposts.count, "Post") %>
      </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>